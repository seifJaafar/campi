<% layout('layouts/Boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=foundCampground._id%>?_method=PUT" method="POST" novalidate
                class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Campground Title</label>
                    <input type="text" class="form-control" name="campground[title]" id="title"
                        value="<%=foundCampground.title%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%=foundCampground.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" placeholder="1.00" step="0.01" min="0" class="form-control"
                            name="campground[price]" id="price" value="<%=foundCampground.price %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                </div>
                <div class=" mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input type="text" name="campground[image]" id="image" class="form-control"
                        value="<%= foundCampground.image %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="campground[description]" id="description" cols="30" rows="10" class="form-control"
                        required><%=foundCampground.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Update Campground</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/scripts/formValidation.js"></script>